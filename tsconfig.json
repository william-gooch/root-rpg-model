{
    "compilerOptions": {
        "target": "es2020",
        "lib": [
            "dom",
            "dom.iterable",
            "es2020"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "outDir": "dist",
        "declaration": true
    },
    "include": [
        "src"
    ]
}